                                        Width="30"
                                        Margin="0 0 10 0"
                                        CornerRadius="15"
                                        Background="#66FFA6"
                                        HorizontalAlignment="Right">

                                        <materialDesign:PackIcon
                                            Kind="Add"
                                            Foreground="White"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Button>

                        </Grid>

                        <Grid Grid.Column="1">

                            <Button 
                                Height="40"
                                Padding="0"
                                BorderBrush="{x:Null}"
                                Style="{StaticResource MaterialDesignRaisedLightButton}"
                                Width="120">
                                <Button.Background>
                                    <LinearGradientBrush>
                                        <GradientStop Color="#42A5F5" Offset="0"/>
                                        <GradientStop Color="#005CB2" Offset="1"/>
                                    </LinearGradientBrush>
